<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">Guitar Store</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
            <form class="form-inline my-2 my-lg-0" action='/' id="cart_search">
                <div class="input-group input-group-sm">
                    <input type="text" name='q' class="form-control" aria-label="Small" placeholder="Search..." id='search_input' value="<%= params[:q] %>">
                    <input type="hidden" name='model' class="form-control" aria-label="Small" placeholder="Search..." id='model_filter' value="<%= params[:model] %>">
                    <input type="hidden" name='brand' class="form-control" aria-label="Small" placeholder="Search..." id='brand_filter' value="<%= params[:brand] %>">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary btn-number" onclick="$('#model_filter').val('');$('#brand_filter').val('');">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <%= link_to dashboard_cart_path,class: 'btn btn-success btn-sm ml-3', remote: true do %>
                  <%= content_tag :i, nil,class: 'fa fa-shopping-cart' %> Cart
                  <%= content_tag :span,nil, class: 'badge badge-light' %>
                  <%= content_tag :span, @cart.shopping_cart_items.sum(:quantity) , {id: 'cart_item_count'} %>
                <% end %>
            </form>
        </div>
    </div>
</nav>
<div class="row">
  <p id="notice"><%= notice %></p>

  <h1>Guitars</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Guitar type</th>
        <th>No of strings</th>
        <th>Price</th>
        <th>Serial number</th>
        <th>Purchase date</th>
        <th>Sold date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @guitars.each do |guitar| %>
        <tr>
          <td><%= guitar.brand_id %></td>
          <td><%= guitar.guitar_type %></td>
          <td><%= guitar.no_of_strings %></td>
          <td><%= guitar.price %></td>
          <td><%= guitar.serial_number %></td>
          <td><%= guitar.purchase_date %></td>
          <td><%= guitar.sold_date %></td>
          <td><%= link_to 'Show', guitar %></td>
          <td><%= link_to 'Edit', edit_guitar_path(guitar) %></td>
          <td><%= link_to 'Delete', guitar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Guitar', new_guitar_path %>
</div>
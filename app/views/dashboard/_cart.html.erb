<div class="container">
	<table id="cart" class="table table-hover table-condensed">
			<thead>
				<tr>
					<th style="width:50%">Product</th>
					<th style="width:20%">Price</th>
					<th style="width:8%">Quantity</th>
					<th style="width:22%" class="text-center">Subtotal</th>
				</tr>
			</thead>
			<tbody>
			  <% @cart.shopping_cart_items.each do |cart_item| %>
					<tr>
						<td data-th="Product">
							<div class="row">
								<div class="col-sm-2 hidden-xs"><img src="<%= cart_item.product.image.url %>" width='50' height='50' class="img-responsive"/></div>
								<div class="col-sm-10">
									<h4 class="nomargin"><%= cart_item.product.brand.name %></h4>
									<p><%= cart_item.product.serial_number %></p>
								</div>
							</div>
						</td>
						<td data-th="Price">$<%= cart_item.price %></td>
						<td data-th="Quantity">
							<%= cart_item.quantity %>
						</td>
						<td data-th="Subtotal" class="text-center">$<%= cart_item.subtotal %></td>
					</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<td></td>
					<td colspan="2" class="hidden-xs"></td>
					<td class="hidden-xs text-center"><strong>Total $<%= @cart.total %></strong></td>
					<td></td>
				</tr>
			</tfoot>
		</table>
</div>